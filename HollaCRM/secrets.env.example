# Security Configuration Template
# Copy this to secrets.env for your local development
# NEVER commit this file to version control!

# Tailscale Configuration
TS_AUTHKEY=tskey-auth-your-authkey-here
TAILNET_HOSTNAME=hrms-server
TAILNET_ENV=dev
TAILNET_IP=100.64.0.1

# Database Configuration
DB_USER=postgres
DB_PASSWORD=your-secure-db-password-here
DB_NAME=horilla

# Horilla Django Configuration
DJANGO_SECRET_KEY=your-super-secret-django-key-32-chars-minimum
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,100.64.0.1
DJANGO_DEBUG=True

# SSL/TLS (if needed)
SSL_CERT_PATH=/etc/ssl/certs/hollacrm.crt
SSL_KEY_PATH=/etc/ssl/private/hollacrm.key

# Monitoring (optional)
GRAFANA_ADMIN_PASSWORD=your-grafana-password
PROMETHEUS_PASSWORD=your-prometheus-password

# Backup Configuration
BACKUP_PASSWORD=your-backup-encryption-key
S3_BACKUP_BUCKET=your-backup-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Third-party integrations (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK